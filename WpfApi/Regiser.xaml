<Window x:Class="WpfApi.Regiser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApi"
        mc:Ignorable="d"
           Title="Информация о вас" Height="300" Width="400"
        MaxHeight="300" MinHeight="300" MaxWidth="400" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Сохранить"  Margin="3" Grid.Row="3" Click="Button_Click"/>
        <TextBox  x:Name="txtLogin"  Margin="5,25,5,5" Grid.Row="1"  />
        <ComboBox x:Name="comboBoxRole" Margin="10,30,10,10" >
            <ComboBoxItem>Admin</ComboBoxItem>
            <ComboBoxItem>User</ComboBoxItem>
        </ComboBox>
        <TextBox  x:Name="txtPassword" Margin="5,25,5,5" Grid.Row="2"  />
        <TextBlock  Margin="100,5,100,40" Text="Роль" TextAlignment="Center" />
        <TextBlock  Margin="100,5,100,40" Grid.Row="1" Text="Логин" TextAlignment="Center"  />
        <TextBlock Margin="100,5,100,40" Grid.Row="2" Text="Пароль" TextAlignment="Center" />
    </Grid>
</Window>
